{
  "name": "math-schedule-manager",
  "version": "1.0.8",
  "description": "알파시티점 수학 시간표 관리 프로그램",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win dir",
    "build:portable": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis",
    "screenshots": "node scripts/capture-screenshots.js"
  },
  "author": "알파시티점",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "playwright": "^1.58.0"
  },
  "build": {
    "appId": "com.alphacity.math-schedule",
    "productName": "수학시간표관리",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "forceCodeSigning": false,
    "npmRebuild": false,
    "portable": {
      "artifactName": "${productName}.exe"
    },
    "files": [
      "**/*",
      "!dist/**"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@notionhq/client": "^2.2.15",
    "dotenv": "^17.2.3",
    "openai": "^6.16.0"
  }
}
