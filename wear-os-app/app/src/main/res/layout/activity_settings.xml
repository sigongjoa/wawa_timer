<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/apiKeyLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/api_key"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/apiKeyInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="secret_xxx..."
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="10sp"
            android:inputType="textPassword"
            android:background="@color/surface"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/apiKeyLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/dbIdLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/database_id"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/apiKeyInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/dbIdInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="abc123..."
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="10sp"
            android:inputType="text"
            android:background="@color/surface"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/dbIdLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/save"
            android:textSize="12sp"
            android:backgroundTint="@color/primary"
            app:layout_constraintTop_toBottomOf="@id/dbIdInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
